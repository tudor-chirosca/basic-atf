<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <include resource="org/springframework/boot/logging/logback/base.xml"/>
  <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
  <springProperty name="logging.file" source="logging.file.name"/>
  <springProperty name="logging.pattern" source="logging.pattern.file"/>

  <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${logging.file}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <totalSizeCap>1GB</totalSizeCap>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${logging.pattern}</pattern>
    </encoder>
  </appender>

  <logger name="com.vocalink.crossproduct" level="INFO">
    <appender-ref ref="FILE-ROLLING"/>
  </logger>

  <logger name="com.vocalink.crossproduct.adapter.bps" level="INFO">
    <appender-ref ref="FILE-ROLLING"/>
  </logger>

  <logger name="com.vocalink.crossproduct.shared" level="INFO">
    <appender-ref ref="FILE-ROLLING"/>
  </logger>
</configuration>
