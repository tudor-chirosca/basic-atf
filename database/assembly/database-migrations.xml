  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>${scheme}</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>migrations/common</directory>
      <outputDirectory>/common</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>migrations/data/${scheme}</directory>
      <outputDirectory>/${scheme}</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
</assembly>
